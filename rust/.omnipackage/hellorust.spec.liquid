Name:       hellorust
Version:    {{ version }}
Release:    1%{?dist}
Summary:    Hello World in Rust
License:    GPL-3.0-or-later
URL:        https://hellowor.ld
Source0:    {{ source_folder_name }}.tar.gz

BuildRequires: {{ build_dependencies | join: ' ' }}

%define debug_package %{nil}
%define _build_id_links none

%description
Hello World in Rust


%prep
%setup -q


%build
cargo build --release


%install
mkdir -p %{buildroot}/usr/bin/
cp -p target/release/rust %{buildroot}/usr/bin/hellorust


%files
%{_bindir}/hellorust


